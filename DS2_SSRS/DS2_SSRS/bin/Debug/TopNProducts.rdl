  <DataSets>
    <DataSet Name="DSet_Main">
      <Query>
        <DataSourceName>DS2_DWH</DataSourceName>
        <QueryParameters>
          <QueryParameter Name="@Category">
            <Value>=Parameters!Category.Value</Value>
          </QueryParameter>
        </QueryParameters>
        <CommandText>SELECT 
	Product.Title as ProductTitle
	, COUNT(OrderID) as NumberOfOrders
	, SUM(TotalAmount) as TotalSales
	, SUM(Tax) as TotalTax
	, Product.[Category]
FROM [dbo].[FactOrder] 
JOIN [dbo].[Product] on FactOrder.ProductID = Product.ProductID
WHERE Product.Category IN (@Category)
GROUP BY Product.Title, Product.[Category]</CommandText>
      </Query>
      <Fields>
        <Field Name="ProductTitle">
          <DataField>ProductTitle</DataField>
          <rd:TypeName>System.String</rd:TypeName>
        </Field>
        <Field Name="NumberOfOrders">
